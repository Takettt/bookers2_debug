<% book.book_comments.each do |book_comment| %>
  <p><%= image_tag book_comment.user.get_profile_image(100,100) %>
<%= book_comment.user.name %>
<%= book_comment.comment %>
  <% if book_comment.user_id == current_user.id %>
  <%= link_to 'Destroy', book_book_comments_path(book_comment.book,book_comment), method: :delete, remote: true ,data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></p>
<% end %>
<% end %>